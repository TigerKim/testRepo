<Window x:Class="AutoStyleType.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="타입에 자동으로 스타일 적용하기 412page" Height="350" Width="525">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Times New Roman" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="20" />
        </Style>
        
    </Window.Resources>
    <StackPanel>
        <Button >Use BingFontButtonStyle</Button>
        <Label>Normal Content :</Label>
        <Button Style="{x:Null}">A Normal Button (스타일 해제 Style="{x:Null}"</Button>
        <Label>More normal Content :</Label>
        <Button>Uses EmphasizedBigFontButtonStyle</Button>
    </StackPanel>
</Window>
