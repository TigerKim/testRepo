<Window x:Class="ShapeDemo4RenderTransform.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="도형변환하기 439page" Height="1124" Width="525">
    <StackPanel>
        
        <Canvas Background="LightGray" Height="250" Margin="10" >            
            <Label Canvas.Left="200" Canvas.Top="90">RotateTransform Angle="0"</Label>
