            <Label Canvas.Left="200" Canvas.Top="170">RotateTransform Angle="90"</Label>
            <Rectangle Width="80" Height="10" Stroke="Blue" Fill="Yellow" Canvas.Left="100" Canvas.Top="100" RenderTransformOrigin="0.5,0.5">
