                    <RotateTransform Angle="0" />
                </Rectangle.RenderTransform>
            </Rectangle>


            <Label Canvas.Left="200" Canvas.Top="120">RotateTransform Angle="25"</Label>
            <Rectangle Width="80" Height="10" Stroke="Blue" Fill="Yellow" Canvas.Left="100" Canvas.Top="100">
