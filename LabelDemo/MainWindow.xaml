<Window x:Class="LabelDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Label p233" Height="258" Width="409">
    <StackPanel>
        <Label Target="{Binding ElementName=txtA}">Choose _A</Label>
        <TextBox Name="txtA"></TextBox>
        <Label Target="{Binding ElementName=txtB}">Choose _B</Label>
        <TextBox Name="txtB"></TextBox>
        <GroupBox Header="특징">
            <ListBox>
                <ListBoxItem>니모닉 지원</ListBoxItem>
                <ListBoxItem>_A는 단축키임. alt+A를 누르면 텍스트박스로 이동함</ListBoxItem>
                <ListBoxItem>alt 키를 누르면 _가 나타남</ListBoxItem>
                <ListBoxItem></ListBoxItem>
            </ListBox>
        </GroupBox>
    </StackPanel>
</Window>
