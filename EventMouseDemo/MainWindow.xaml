<Window x:Class="EventMouseDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="481" Width="398">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Background="LightBlue" Margin="5"
               MouseMove="Label_MouseMove"
               ></Label>
        <Label Grid.Row="1" Background="White"  Margin="5" Name="lblInfo">
            You are at (x, y) in window coordinates
        </Label>
    </Grid>
</Window>
